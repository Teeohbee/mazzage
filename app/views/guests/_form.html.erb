<%= form_for @guest do |f| %>
  <div class="form-group">
    <% if flash[:alert] %>
      <div class="alert alert-warning"><%= flash[:alert] %></div>
    <% end %>
    <%= f.label :name, "What's your name?" %>
    <%= f.select :name, guest_names, include_blank: true %>
  </div>
  <div class="form-group toggle">
    <%= f.label :attendance, "Are you able to attend our wedding?" %>
    <div class="btn-group btn-group-toggle" id="responsive" data-toggle="buttons">
      <label class="btn btn-outline-info active">
        <%= f.radio_button :attendance, true, :style=>"display:none;", :checked => true %>
        Yes, I can attend
      </label>
      <label class="btn btn-outline-info">
        <%= f.radio_button :attendance, false, :style=>"display:none;" %>
        No, I cannot attend
      </label>
    </div>
  </div>
  <div class="form-group">
    <%= f.text_area :message, class: 'form-control', placeholder: 'Write us a message...' %>
  </div>
  <div class="form-group toggle">
    <%= f.label :food_option, "What food option would you prefer?" %>
    <div class="btn-group btn-group-toggle" data-toggle="buttons">
      <label class="btn btn-outline-info active">
        <%= f.radio_button :food_option, 'meat', :style=>"display:none;", :checked => true %>
        Meat
      </label>
      <label class="btn btn-outline-info">
        <%= f.radio_button :food_option, 'vegetarian', :style=>"display:none;" %>
        Vegetarian
      </label>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :food_option, "Do you have any other dietary requirements?" %>
    <%= f.text_area :dietary_requirements, class: 'form-control', placeholder: 'Please let us know...' %>
  </div>
  <%= f.submit 'Submit RSVP', class:'btn btn-info' %>
<% end %>
